<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="hr.math.pemarti.popravni.MainActivity"
    android:orientation="vertical">

    <Button android:id="@+id/btnSport"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/downloadSport"
        android:onClick="downloadSportovi"/>

    <Button android:id="@+id/btnSportas"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/downloadSportas"
        android:onClick="downloadSportasi"/>

    <Button android:id="@+id/showDB"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/showDB"
        android:onClick="showDB"/>

    <LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView android:id="@+id/bazaSportasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
        <TextView android:id="@+id/bazaSportovi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

    </LinearLayout>




</LinearLayout>
